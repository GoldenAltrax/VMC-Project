{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",

  "productName": "VMC Planner",
  "version": "1.0.0",
  "identifier": "com.vmcplanner.app",

  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },

  "app": {
    "windows": [
      {
        "label": "splashscreen",
        "title": "VMC Planner",
        "width": 420,
        "height": 300,
        "decorations": false,
        "resizable": false,
        "center": true,
        "transparent": true,
        "visible": true,
        "url": "../src-tauri/splashscreen.html"
      },
      {
        "label": "main",
        "title": "VMC Planner",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },

  "bundle": {
    "active": true,
    "targets": ["app", "dmg", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
